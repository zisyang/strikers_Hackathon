<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/startText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Year"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/startYear"
        android:layout_width="84dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:text="1960"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/startText"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-7dp"></EditText>

    <TextView
        android:id="@+id/Endtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="End Year"
        app:layout_constraintStart_toEndOf="@+id/startYear"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="1dp" />

    <EditText
        android:id="@+id/endYear"
        android:layout_width="84dp"
        android:layout_height="36dp"
        android:layout_marginStart="36dp"
        android:text="2020"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/Endtext"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-4dp"></EditText>

    <Button
        android:id="@+id/GetStartedBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="Annotation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="354dp"
        android:layout_height="245dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/agri" />

</androidx.constraintlayout.widget.ConstraintLayout>